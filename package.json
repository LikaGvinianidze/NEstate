{
  "name": "nestate",
  "version": "1.0.0",
  "description": "nestate",
  "author": "Oto Meskhy, Max Janelidze",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "ejs": "copyfiles -u 1 'src/**/*.ejs' dist",
    "assets": "copyfiles -u 2 'src/public/css/**/*.*' 'src/public/fonts/**/*.*' 'src/public/img/**/*.*' dist/public",
    "tslint": "tslint src/**/*.ts"
  },
  "dependencies": {
    "@nestjs/common": "5.0.0",
    "@nestjs/core": "5.0.0",
    "@nestjs/passport": "1.1.0",
    "@nestjs/typeorm": "5.0.1",
    "@types/bcryptjs": "2.4.1",
    "bcryptjs": "2.4.3",
    "class-transformer": "0.1.9",
    "class-validator": "0.8.5",
    "connect-redis": "3.3.3",
    "dotenv": "6.0.0",
    "ejs": "2.6.1",
    "express-session": "1.15.6",
    "fastify-formbody": "2.0.0",
    "lodash": "4.17.10",
    "moment": "2.22.2",
    "multer": "1.3.1",
    "mysql": "2.15.0",
    "owl.carousel": "2.3.4",
    "passport": "0.4.0",
    "passport-http-bearer": "1.0.1",
    "passport-local": "1.0.0",
    "path": "0.12.7",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.0.0",
    "soap": "0.25.0",
    "typeorm": "0.2.7",
    "typescript": "2.6.2"
  },
  "devDependencies": {
    "@nestjs/testing": "5.0.0",
    "@types/dotenv": "4.0.3",
    "@types/express": "4.0.39",
    "@types/jest": "21.1.8",
    "@types/node": "9.3.0",
    "@types/supertest": "2.0.4",
    "copyfiles": "2.0.0",
    "jest": "21.2.1",
    "nodemon": "1.14.1",
    "prettier": "1.11.1",
    "supertest": "3.0.0",
    "ts-jest": "21.2.4",
    "ts-loader": "4.1.0",
    "ts-node": "4.1.0",
    "tsconfig-paths": "3.1.1",
    "tslint": "5.3.2",
    "webpack": "4.2.0",
    "webpack-cli": "2.0.13",
    "webpack-node-externals": "1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
