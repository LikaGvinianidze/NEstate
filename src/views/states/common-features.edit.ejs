            <select name="store" id="store_option" title="აირჩიეთ ერთერთი" class="selectpicker bootstrap-select form-control m-bootstrap-select">
              <% for (const key in store) { %>
                <option
                  <% if (features[key]) { %> selected <% } %>
                  value="<%=key%>">
                  <%=store[key]%></option>
              <% } %>
            </select>
          </div>
      </div>

      <div class="checkbox-in">
