  <div class="form-group m-form__group row">
      <!--<div class="form-group m-form__group row">-->
        <label for="" class="col-lg-2 col-form-label">
          მდგომარეობა
        </label>
        <div class="col-lg-2">
          <select name="condition" title="აირჩიეთ ერთერთი" class="selectpicker searchTerm bootstrap-select form-control m-bootstrap-select m-select2 states-select">
            <% conditions.forEach(con => { %>
              <option
                <% if (state.condition && con.id === state.condition.id) { %> selected <% } %>
                value="<%=con.id%>">
                <%=con.name%>
              </option>
              <% }) %>
          </select>
        </div>
        </div>
        <div class="form-group m-form__group row">
        <label class="col-lg-2 col-form-label">
          ჭერის სიმაღლე
        </label>
        <div class="col-lg-2 number-checkbox-container">
          <input type="number" name="ceiling_height" value="<%=state.ceiling_height%>" class="form-control m-input">
        </div>
        </div>
      <!--</div>-->


  <script>
    $('.number').click(function () {
      if ($(this).is(':checked'))
      $(this).toggleClass("active");
    });
    $('.selectpicker').selectpicker();
  </script>