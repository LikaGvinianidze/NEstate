    </div>

    <div class="checkbox-in">
      <label class="m-checkbox">
        <label class="col-form-label">კონდიციონერი</label>
        <input
          <% if (features.air_conditioner) { %> checked <% } %>
          name="air_conditioner"
          class="feature"
          type="checkbox" />
        <span></span></label>
    </div>

    <div class="checkbox-in">
      <label class="m-checkbox">
        <label class="col-form-label">ტელევიზორი</label>
        <input
          <% if (features.tv) { %> checked <% } %>
          name="tv"
          class="feature"
          type="checkbox" />
        <span></span>
      </label>
    </div>

    <div class="checkox-in">
