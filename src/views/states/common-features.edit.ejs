        <span></span>
      </label>

      <div <% if (!features.hot_water) { %> style="display: none" <% } %> class="sel-features">
        <select name="hotWater" id="hotWater_option" title="აირჩიეთ ერთერთი" class="selectpicker bootstrap-select form-control m-bootstrap-select">
          <% for (const key in hotWater) { %>
            <option
              <% if (features[key]) { %> selected <% } %>
              value="<%=key%>">
