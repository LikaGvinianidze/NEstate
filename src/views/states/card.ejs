<% let currency, area = ''; let lariCheck, dollarCheck = false;  %>
<%  if (state.currency.name === 'lari') { currency = '₾'; lariCheck = true; }%>
<%  if (state.currency.name === 'dollar') { currency = '$'; dollarCheck = true }%>
<%  if (state.currency.name === 'euro') currency = '€'; %>
<%  if (state.area_type.name === 'm2') area = 'მ²'; %>
<%  if (state.area_type.name === 'ha') area = 'ჰა'; %>
<%  if (state.area_type.name === '1/100') area = '1/100'; %>

<% const day = new Date(state.created_at).getDate(); %>
<% const month = new Date(state.created_at).getMonth() + 1;  %>
<% const year = new Date(state.created_at).getFullYear();  %>
<!DOCTYPE html>
<html lang="en">
<!-- begin::Head -->

<% include ../shared/head.ejs %>
<!-- end::Head -->
<!-- end::Body -->

<body class="m-page--fluid m--skin- m-content--skin-light2 m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--fixed m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
	<!-- begin:: Page -->
	<div class="m-grid m-grid--hor m-grid--root m-page">
		<!-- BEGIN: Header -->
		<% include ../shared/header.ejs %>
		<!-- END: Header -->
		<!-- begin::Body -->

    <!-- Your Body Here -->
    <div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
    <div class="m-grid__item m-grid__item--fluid m-wrapper">

  <div class="m-content">

<div class="m-portlet">
    <div class="m-portlet__head">
        <div class="m-portlet__head-caption">
          <div class="m-portlet__head-title">
            <span class="m-portlet__head-icon m--hide">
              <i class="la la-gear"></i>
            </span>
            <h3 class="m-portlet__head-text">
              უძრავი ქონება
            </h3>
            <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
              <li class="m-nav__item m-nav__item--home">
              </li>
              <li class="m-nav__item">
                <a href="/states" class="m-nav__link">
                <span class="m-nav__link-text">
                    <i class="la la-angle-double-left"></i>
                  დაბრუნება
                </span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>

    <div class="modal-dialog modal-lg card-estate" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <div class="owl-carousel owl-theme">
            <div class="item">
              <img src="http://unicorncapitalllc.com/wp-content/uploads/2014/09/commercial.jpg" alt="">
            </div>
            <div class="item">
              <img src="http://www.johndhaleband.com/wp-content/uploads/2017/05/image_20170210_195645_4289.jpg" alt="">
            </div>
            <div class="item">
              <img src="https://img.huffingtonpost.com/asset/5a3126821500004e0049b6c9.jpeg?ops=scalefit_720_noupscale" alt="">
            </div>
            <div class="item">
              <img src="https://i0.wp.com/websiteghana.com/wp-content/uploads/cache/2017/09/real-estate-companies-ghana/2811150704.jpg" alt="">
            </div>
            <div class="item">
              <img src="http://unicorncapitalllc.com/wp-content/uploads/2014/09/commercial.jpg" alt="">
            </div>
            <div class="item">
              <img src="http://www.johndhaleband.com/wp-content/uploads/2017/05/image_20170210_195645_4289.jpg" alt="">
            </div>
            <div class="item">
              <img src="https://img.huffingtonpost.com/asset/5a3126821500004e0049b6c9.jpeg?ops=scalefit_720_noupscale" alt="">
            </div>
            <div class="item">
              <img src="https://i0.wp.com/websiteghana.com/wp-content/uploads/cache/2017/09/real-estate-companies-ghana/2811150704.jpg" alt="">
            </div>
          </div>
          <h4 class="text-center"> <i class="la la-home"></i> <b><%= state.transaction_type.name %></b> <%= state.status ? statuses[state.status] : '' %> <%= state.state_type.name %> </h4>
          <div class="row row-up">
            <div class="col-md-6 text-center">
              <p>
                <strong>
                  <%= state.municipality.name %>
                </strong>
                <%= state.village ? ', ' + state.village.name : '' %>
                <%= state.street ? ', ' + state.street : '' %>
              </p>
              <p> <strong><%= day + '-' + month + '-' + year %></strong> (ID: <%= state.slug %>)</p>
              <p> <strong>ანანო ანანო </strong> 577343242 </p>
            </div>
            <div class="col-md-6 text-center">
              <div class="cash">
                <div class="cash-in">
                საერთო ფასი:
                <strong
                  id="total_value" basevalue="<%=state.total_price%>">
                  <%=state.total_price + ' ' + currency%>
                </strong>
              </div>
                <div class="pricing-container">
                    <div class="pricing-switcher2">
                      <p class="fieldset fieldset-2">
                        <input type="radio" name="convert_currency" value="lari" id="monthly-9" <% if (lariCheck) { %> checked <% } %> >
                        <label for="monthly-9" class="monthly-label1" > ₾ </label>
  
                        <input type="radio" name="convert_currency" value="dollar" id="yearly-9" <% if (dollarCheck) { %> checked <% } %> >
                        <label for="yearly-9" class="yearly-label1" >$</label>
                        <span class="switch"></span>
                      </p>
                    </div>
                  </div>
            
              </div>
              <p>
                მ²-ის ფასი:
                <strong 
                  id="square_value" basevalue="<%=state.square_price%>" basecur="<%=state.currency.name%>">
                  <%=state.square_price + ' ' + currency%>
                </strong>
              </p>
              <p>ფართი: <strong><%= state.area + ' ' + area %></strong></p>
            </div>
          </div>
          <div class="row row-up">
            <div class="col-md-6">
              <div class="modal_in">
                <h5><strong>კეთილმოწყობა</strong></h5>
                <div class="m-list-timeline">
                  <div class="m-list-timeline__items">

                    <% const stFeatures = JSON.parse(state.features) %>
                    <% for (const key in stFeatures) { %>
                      <% if (features.hasOwnProperty(key)) { %>
                        <div class="m-list-timeline__item">
                          <span class="m-list-timeline__badge m-list-timeline__badge--success"></span>
                          <span class="m-list-timeline__text">
                            <%=features[key]%>
                          </span>
                        </div>
                      <% } %>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="modal_in">
                <h5><strong>დეტალური ინფორმაცია</strong></h5>
                <div class="m-list-timeline">
                  <div class="m-list-timeline__items">
                    <% if (state.state_type.name.trim() !== 'მიწის ნაკვეთი') { %>
                      <% if (state.project) { %>
                      <div class="m-list-timeline__item">
                        <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                        <span class="m-list-timeline__text">
                            <strong>პროექტი: </strong><%=state.project.name%>
                        </span>
                      </div>
                      <% } %>
                      <% if (state.condition) { %>
                      <div class="m-list-timeline__item">
                        <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                        <span class="m-list-timeline__text">
                            <strong>მდგომარეობა: </strong><%=state.condition.name%>
                        </span>
                      </div>
                      <% } %>

                      <div class="m-list-timeline__item">
                        <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                        <span class="m-list-timeline__text">
                            <strong>სართული: </strong>
                            <%= state.floors_quantity %>
                            <% if (state.floor) { %> (<%= state.floor %>) <% } %>
                        </span>
                      </div>

                      <div class="m-list-timeline__item">
                        <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                        <span class="m-list-timeline__text">
                            <strong>ოთახები: </strong>
                            <%= state.rooms_quantity %>
                            <% if (state.bedrooms_quantity) { %> (<%= state.bedrooms_quantity %>) <% } %>
                        </span>
                      </div>

                      <div class="m-list-timeline__item">
                        <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                        <span class="m-list-timeline__text">
                            <strong>აივანი: </strong><%= state.balcony_area ? state.balcony_area + ' მ²' : 'არა' %>
                        </span>
                      </div>

                      <div class="m-list-timeline__item">
                        <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                        <span class="m-list-timeline__text">
                            <strong>ლოჯი: </strong><%= state.loggie_area  ? state.loggie_area + ' მ²' : 'არა' %>
                        </span>
                      </div>

                      <div class="m-list-timeline__item">
                        <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                        <span class="m-list-timeline__text">
                            <strong>ვერანდა: </strong><%= state.veranda_area  ? state.veranda_area + ' მ²' : 'არა' %>
                        </span>
                      </div>

                      <div class="m-list-timeline__item">
                        <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                        <span class="m-list-timeline__text">
                            <strong>ჭერის სიმაღლე: </strong><%= state.ceiling_height + ' მ'%>
                        </span>
                      </div>

                      <div class="m-list-timeline__item">
                        <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                        <span class="m-list-timeline__text">
                            <strong>სველი წერტლი: </strong><%= restrooms[state.restrooms_quantity] %>
                        </span>
                      </div>
                    <% } %>
                    <% if (stFeatures.station) { %>
                    <div class="m-list-timeline__item">
                      <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                      <span class="m-list-timeline__text">
                        <strong>პარკინგი: </strong><%= stFeatures.garage ? parking.garage : parking.parkingPlace %>
                      </span>
                    </div>
                    <% } %>
                    <% if (stFeatures.storeroom) { %>
                    <div class="m-list-timeline__item">
                      <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                      <span class="m-list-timeline__text">
                        <% for (const key in store) { %>
                          <% if (stFeatures[key]) { %>
                            <strong>სათავსო: </strong><%= store[key] %>
                          <% } %>
                        <% } %>
                      </span>
                    </div>
                    <% } %>
                    <% if (state.exchange) { %>
                    <div class="m-list-timeline__item">
                      <span class="m-list-timeline__badge m-list-timeline__badge--danger"></span>
                      <span class="m-list-timeline__text">
                        <strong>იცვლება: </strong><%=exchange[state.exchange]%>
                      </span>
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row row-up">
            <div class="col-md-12">
              <div class="modal_in">
                  <h5><strong>კომენტარი</strong></h5>
                  <%=state.comment%>
              </div>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <a href="/states/<%=state.id%>">
            <button type="button" class="btn btn-primary">
              რედაქტირება
            </button>
          </a>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
</div> 
		<div class="m-grid__item m-grid__item--fluid m-grid m-grid--ver-desktop m-grid--desktop m-body">
			<!-- BEGIN: Left Aside -->
			<button class="m-aside-left-close m-aside-left-close--skin-dark" id="m_aside_left_close_btn">
				<i class="la la-close"></i>
			</button>
			<div id="m_aside_left" class="m-grid__item	m-aside-left  m-aside-left--skin-dark ">
				<!-- BEGIN: Aside Menu -->
				<% include ../shared/sidebar.ejs %>
				<!-- END: Left Aside -->
			</div>
			<!-- end:: Body -->
			<!-- begin::Footer -->
			<% include ../shared/footer.ejs %>
			<!-- end::Footer -->
		</div>
		<!-- end:: Page -->

		<!-- begin::Scroll Top -->
		<div class="m-scroll-top m-scroll-top--skin-top" data-toggle="m-scroll-top" data-scroll-offset="500" data-scroll-speed="300">
			<i class="la la-arrow-up"></i>
    </div>
    <% include ../shared/scripts/for-all.scripts.ejs %>
    <% include ../shared/scripts/states.ejs %>
</body>
<!-- end::Body -->

</html>